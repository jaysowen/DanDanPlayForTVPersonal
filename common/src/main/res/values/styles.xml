<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTheme"/>

    <style name="CommonTheme.ParentLayout" parent="CommonTheme">
        <item name="android:id">@id/container</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="CommonTheme.DialogLayout" parent="CommonTheme.ParentLayout">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black_30</item>
    </style>

    <style name="CommonTheme.Button">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/button_focusable_selector</item>
    </style>
    <style name="CommonTheme.DialogButton" parent="CommonTheme.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="CommonTheme.ImageButton" parent="CommonTheme.Button">
        <item name="android:tint">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>