<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vlc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/grey800">
    <include
        layout="@layout/player_control_ab_repeat"
        android:id="@id/player_layout_ab_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        vlc:layout_constraintStart_toStartOf="@+id/player_layout_hub"
        vlc:layout_constraintBottom_toTopOf="@+id/player_layout_hub" />
    <include
        layout="@layout/player_control_bottom"
        android:id="@id/player_layout_hub"
        android:layout_width="@dimen/player_control_bottom_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        vlc:layout_constraintBottom_toBottomOf="parent"
        vlc:layout_constraintStart_toStartOf="parent"
        vlc:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>