<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.Leanback.Browse">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimStyle</item>
        <item name="defaultBrandColor">#424242</item>
        <item name="defaultBrandColorDark">#1b1b1b</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="@style/BaseTheme">
        <item name="android:windowBackground">@drawable/background_splash_default</item>
    </style>

    <style name="ActivityAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_exit</item>
    </style>

    <style name="DefaultDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppParentLayout">
        <item name="android:id">@id/container</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="AppParentLayout.Dialog" parent="AppParentLayout">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black_30</item>
    </style>

    <style name="AppButton">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="AppButton.Dialog" parent="AppButton">
        <item name="android:background">@drawable/button_focusable_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AppTextStyle.Min" parent="AppTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTextStyle.Title" parent="AppTextStyle">
        <item name="android:lines">2</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="AppTextStyle.Chapter" parent="AppTextStyle.Min">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
